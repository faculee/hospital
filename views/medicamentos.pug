extends layout

block extraHead
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
  script(type="module", src="/js/medicamentos.js")

block content

  style.
    .table th {
      background-color: #343a40; 
      color: #fff;
      font-weight: bold;
      border: none;
      padding: 0.75rem;
    }
    #mensajes { border-radius: 6px; font-size: 1rem; transition: all 0.3s ease; }

  .card.shadow
    .card-body
      h2.text-center.h5.mb-4 Administración de Medicamentos

      form#formMedicamento
        input(type="hidden", id="idmedicamento")

        .row.mb-3
          .col-md-4
            label.form-label.text-center.w-100(for="nombremedicamento") Nombre del medicamento:
            input.form-control#nombremedicamento(type="text", autocomplete="off", style="text-transform: uppercase;")

          .col-md-4
            label.form-label.text-center.w-100(for="presentacion") Presentación:
            input.form-control#presentacion(type="text", autocomplete="off", , style="text-transform: uppercase;")

          .col-md-4
            label.form-label.text-center.w-100(for="idclasificacionterapeutica") Clasificación terapéutica:
            select.form-select#idclasificacionterapeutica(name="idclasificacionterapeutica")
              option(value="") Seleccione una clasificación

        .row.mb-3
          .col-md-4.offset-md-8.d-flex.justify-content-between.align-items-end
            button.btn.btn-dark.w-100.me-2(type="button", id="btnNuevo") Nuevo
            button.btn.btn-primary.w-100(type="submit", id="btnGuardar") Guardar

        #mensajes.mt-3.text-center

      hr.my-4

      h5.text-center.mt-4 Lista de Medicamentos
      .row.mb-3
        .col-md-6.offset-md-3
          input.form-control(type="text", id="busquedaMedicamento", placeholder="Buscar medicamento por nombre")

      table.table.table-bordered.table-sm.text-center
        thead
          tr
            th ID
            th Nombre
            th Presentación
            th Clasificación
            th Acciones
        tbody#tablaMedicamentos

      nav.mt-3.d-flex.justify-content-center
        ul.pagination#paginacionMedicamentos
